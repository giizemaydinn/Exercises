<UserControl x:Class="Challenge12.View.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Challenge12.View"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="622">
    <Border>

        <Grid  Width="380">

            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                <Image Name="imgUser" Height="64" Width="64" Margin="0,20,0,0" />
                <Label Content="Account" Margin="0,4,0,12" HorizontalAlignment="Center" Foreground="#444444" FontFamily="Segoe UI Semilight" FontSize="26"></Label>
                <Grid Margin="0,0,0,8">
                    <TextBlock Name="txtName" Background="Transparent"  HorizontalAlignment="Center" Height="36" Width="220" >
                    </TextBlock>
                </Grid>

                </StackPanel>
        </Grid>

    </Border>




</UserControl>
